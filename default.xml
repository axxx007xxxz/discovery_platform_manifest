<?xml version="1.0" encoding="UTF-8"?>
<manifest>

  <remote  name="github"
           fetch="https://github.com" />

  <remote  name="discovery"
           fetch="https://github.com/DiscoveryTeam"
           revision="aosp-N-legacy" />

  <remote  fetch="https://source.codeaurora.org/quic/la/"
           name="caf"
           review="codeaurora.org"/>

  <default  remote="caf"
            revision="android-external.lnx.2.0.r5-rel" />

  <project path="build" name="platform_build" groups="pdk,tradefed" remote="discovery" >
      <copyfile src="core/root.mk" dest="Makefile" />
      <copyfile src="build.sh" dest="build.sh" />
  </project>

  <project path="manifest" name="platform_manifest" remote="discovery" />

<!-- Discovery ROM repos -->

  <!-- Discovery device tree -->
  <project path="device/lge/hammerhead" name="device_lge_hammerhead" groups="pdk" revision="discovery7.1" remote="discovery" />
  <project path="device/xiaomi/gemini" name="device_xiaomi_gemini" groups="pdk" remote="discovery" />
  <project path="device/zuk/z2_plus" name="platform_device_zuk_z2_plus" groups="pdk" remote="discovery" />
  <project path="kernel/zuk/msm8996" name="platform_kernel_zuk_msm8996" remote="discovery" />

  <!-- Discovery ROM frameworks -->
  <project path="frameworks/base" name="platform_frameworks_base" groups="pdk-cw-fs,pdk-fs" remote="discovery" />

  <!-- Discovery ROM packages -->
  <project path="packages/apps/Settings" name="platform_packages_apps_Settings" groups="pdk-fs" remote="discovery" />

  <!-- Discovery ROM vendor -->
  <project path="vendor/discovery" name="proprietary_vendor_discovery" remote="discovery" />

<!-- The Muppets' vendor -->
  <include name="themuppets.xml"/>

<!-- CAF -->
  <include name="caf.xml"/>
</manifest>
